$header-height = 53.5px
$footer-height = 42.5px

// ******************************************************

// BASIC

.main-content-padding
  padding-top: $header-height
  padding-bottom: $footer-height

.min-height-content 
  min-height: calc('100vh - ' + ($header-height * 2))
  
// ******************************************************

// FORMS
  
input, select, button, .button
  padding: $margin-micro
  
// ******************************************************

// HEADER

#header
  padding: $margin-tiny $margin-small 0

// ******************************************************

// HOME

.home-video
  width: 50vw

// ******************************************************

// FOOTER

#footer
  padding: 0 $margin-small $margin-tiny

.footer-cart
  margin-left: $margin-tiny

// ******************************************************

// SINGLE COLLECTION

body.single-collection
  overflow-x: scroll

.single-collection-row
  position: absolute
  top: 0
  left: 0
  height: 100%
  justify-content: initial
  flex-wrap: nowrap

.single-collection-item
  padding: 0 30vw 0 10vw
  
.single-collection-text
  padding: $header-height 10vw
  margin-top: 0
  display: flex 
  flex-direction: column
  align-items: center
  p 
    width: 400px

// ******************************************************

// ARCHIVE COLLECTION

.archive-collection-item
  text-align: left

// ******************************************************

// SINGLE PRODUCT

// ******************************************************

// CART

.cart-remove-item
  left: $margin-tiny
  
.quantity
  input 
    margin-top: -($margin-tiny)
    
.button-shop
  padding: $margin-micro
  
#coupon_code
  width: auto
  
.woocommerce-shipping-calculator
  text-align: right