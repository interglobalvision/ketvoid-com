@import 'kouto-swiss'
@import 'helpers'
@import 'swiper'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)

$transition-speed = 2000ms

// ******************************************************

// BASIC

html
  height: 100%
  background-color: $color-white
  color: $color-black

img
  max-width: 100%
  height: auto

.mobile-only
  display: initial !important 
  
.desktop-only
  display: none !important
  
.site-overlay
  position: fixed
  top: 0
  left: 0
  height: 100%
  width: 100%
  background: $color-black
  transition: opacity $transition-speed
  opacity: 1
  z-index: 900
  &.hide 
    opacity: 0
    pointer-events: none
  
// ******************************************************

// HEADER 

#header
  position: fixed 
  width: 100%
  top: 0
  left: 0
  pointer-events: none
  z-index: 100
  
.site-title 
  margin: 0
  a 
    pointer-events: auto
    
// ******************************************************

// FOOTER 

#footer 
  position: fixed 
  width: 100%
  bottom: 0
  left: 0
  pointer-events: none
  z-index: 100
  
.menu-item
  pointer-events: auto

// HOME 

.home-image 
  position: fixed 
  overflow: hidden

.home-image-top
  top: 0
  left: 0
  
.home-image-right
  top: 0
  right: 0
  
.home-image-bottom
  bottom: 0
  right: 0
  
.home-image-left
  bottom: 0
  left: 0
  
.home-image-bg
  position: absolute
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  top: 0
  left: 0
    
.home-image-bg-top,
.home-image-bg-bottom
  height: 200%
  width: 100%
      
.home-image-bg-right,
.home-image-bg-left
  width: 200%
  height: 100%
  
.home-image-bg-bottom
  top: auto
  bottom: 0
  
.home-image-bg-right
  left: auto
  right: 0
  
.home-video
  position: fixed
  cursor: pointer
  overflow: hidden
  iframe 
    position: absolute 
    
// ******************************************************

// ARCHIVE COLLECTION

.archive-collection-image-holder
  position: fixed
  opacity: 0 
  pointer-events: none 
  z-index: -100 
  width: 100%
  height: 100%
  top: 0
  left: 0
  &.visible
    opacity: 1
  &.pos-0
    justify-content: center
    align-items: flex-start
  &.pos-1
    justify-content: flex-end
    align-items: center
  &.pos-2
    justify-content: center
    align-items: flex-end
  &.pos-3
    justify-content: flex-start
    align-items: center
  &.flip-1
    img 
      transform: scaleY(-1)
  &.flip-2
    img 
      transform: scaleX(-1)
  &.flip-3
    img 
      transform: rotate(180deg)

// ******************************************************

// SINGLE PRODUCT

.swiper-wrapper
  align-items: center
  
// ******************************************************

// MEDIA QUERIES

$gutter = 14px 

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)
    
$font-size-basic = 14px
$font-size-large = 28px
$font-size-medium = 21px
$font-size-small = 10px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, $font-size-medium, $font-size-small)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px
  
  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  $font-size-basic = 14px
  $font-size-large = 32px
  $font-size-medium = 24px
  $font-size-small = 11px
  
  grid(96%, $gutter, m)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  font-sizes($font-size-basic, false, $font-size-large, $font-size-medium, $font-size-small)
  
  .mobile-only
    display: none !important
  
  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  $font-size-basic = 16px
  $font-size-large = 36px
  $font-size-medium = 27px
  $font-size-small = 12px

  grid(1000px, $gutter, l)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  font-sizes($font-size-basic, false, $font-size-large, $font-size-medium, $font-size-small)
  
  .desktop-only
    display: initial !important

  @import 'responsive/desktop'
  
@media screen and (min-width: 1280px)
  
  grid(1200px)

@media screen and (min-width: 1366px)

  grid(1300px)

@media screen and (min-width: 1680px)

  grid(1600px, $gutter, xl)

@media screen and (min-width: 1920px)

  grid(1800px)
